@model Entities.DTOs.Claim.AddUpdateClaim;
@{
    ViewData["Title"] = "AddClaim";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
@section Category{};
<h1>AddClaim</h1>
<div class="card" style="width:500px">
    <div class="card-body">

        @using (Html.BeginForm(ViewBag.ActionName as string, "Claim", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(x => x.Id)

            <div class="form-group">
                @Html.LabelFor(x => x.Name, "Görev Girin", new { @class = "form-label" })
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "invalid-feedback d-block" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        }
    </div>
</div>
