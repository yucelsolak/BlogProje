<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

</head>
<body>
    <div class="container" style="margin-top:50px;">
       
        @if (IsSectionDefined("Category"))
        {
            <div class="row">
                <div class="col-md-3">
                    @RenderSection("Category")
                    <div class="list-group"><a class="list-group-item list-group-item-action" href="/Admin">Home</a></div>
                    <div class="list-group"><a class="list-group-item list-group-item-action" href="/Admin/Category">Categories</a></div>
                    <div class="list-group"><a class="list-group-item list-group-item-action" href="/Admin/Blog">Blogs</a></div>
                </div>
                <div class="col-md-9">@RenderBody()</div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-12">@RenderBody()</div>
            </div>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
