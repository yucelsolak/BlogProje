@model Entities.DTOs.Blog.KeywordLinkDto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
@section Category{}

<h4>Update Keyword</h4>

<div class="card" style="width:500px">
    <div class="card-body">

        <form action="/Admin/Keyword/Edit/@Model.KeywordId" method="post" class="d-inline">
            @Html.HiddenFor(x => x.KeywordId)

            <div class="form-group">
                @Html.LabelFor(x => x.KeywordName, "Keyword Girin", new { @class = "form-label" })
                @Html.TextBoxFor(x => x.KeywordName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.KeywordName, null, new { @class = "invalid-feedback d-block" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
      </form>
    </div>
</div>
