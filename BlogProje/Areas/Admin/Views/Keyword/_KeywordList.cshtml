@using Entities.DTOs.Blog
@model List<KeywordLinkDto>
<table class="table table-hover" style="width:500px">
    <thead>
        <tr>
            <th>Keyword Id</th>
            <th>Keyword</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var keyword in Model)
        {
            <tr>
                <td width="25%">@keyword.KeywordId</td>
                <td width ="55%">
                    @keyword.KeywordName

                </td>
                <td width="20%">
                    <form action="/Admin/Keyword/Delete/@keyword.KeywordId" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-link p-0 m-0" style="color: inherit;"
                                onclick="return confirm('Bu Keyword silinsin mi?');">
                            <i class="bi bi-archive-fill h4"></i>
                        </button>
                    </form>

                    &nbsp;&nbsp;
                    <a href="/Admin/Keyword/Edit/@keyword.KeywordId""><i class="bi bi-pencil-square h4"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>