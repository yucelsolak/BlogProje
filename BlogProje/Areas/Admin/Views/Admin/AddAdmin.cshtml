@model Entities.DTOs.Admin.AddUpdateAdmin
@{
    ViewData["Title"] = "AddAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
@section Category{}
<h1>AddAdmin</h1>
<div class="card" style="width:500px">
    <div class="card-body">

        @using (Html.BeginForm(ViewBag.ActionName as string, "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(x => x.AdminId)

            <div class="form-group">
                @Html.LabelFor(x => x.Name, "Ad Soyad Girin", new { @class = "form-label" })
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "invalid-feedback d-block" })
             </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Email, "E-Mail Girin", new { @class = "form-label" })
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "invalid-feedback d-block" })
            </div>
            <div class="form-group">
                @if(ViewBag.ActionName=="Edit")
                {
                    @Html.LabelFor(x => x.Password, "Boş Bırakırsanız Şifre Değişmez", new { @class = "form-label" })
                }
                else
                {
                    @Html.LabelFor(x => x.Password, "Şifre Girin", new { @class = "form-label" })
                }

                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "invalid-feedback d-block" })
            </div>
            <div class="form-group">
                @Html.CheckBoxFor(x => x.Status, new { @class = "form-check-input" })
                @Html.LabelFor(x => x.Status, "Status", new { @class = "form-check-label" })

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        }
    </div>
    </div>
