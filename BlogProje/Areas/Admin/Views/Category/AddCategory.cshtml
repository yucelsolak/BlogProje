@model Entities.DTOs.Category.UpdateCategoryDto

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
@section Category {
}
<h1>AddCategory</h1>

<div class="card" style="width:500px">
    <div class="card-body">
        @using (Html.BeginForm(ViewBag.ActionName as string, "Category", FormMethod.Post))
        {

            @Html.HiddenFor(x => x.CategoryId)

            <div class="form-group">
                @Html.LabelFor(x => x.CategoryName)
                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })

                    @Html.ValidationMessageFor(m => m.CategoryName, null, new { @class = "invalid-feedback d-block" })
            </div>

            <div class="form-group form-check">
                @Html.CheckBoxFor(x => x.Status, new { @class = "form-check-input" })
                @Html.LabelFor(x => x.Status, new { @class = "form-check-label" })
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
        }
    </div>
</div>