@using Entities.DTOs.Blog
@model IEnumerable<BlogListDto>
<h2>@ViewBag.CategoryName</h2>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Category {
}
@foreach (var item in Model)
{
    <div class="card p-2 m-3 float-start" style="width:450px;">
        <img src="@(Url.Content(string.IsNullOrEmpty(item.Image)
                 ? "~/images/placeholder.png"
                 : $"~/images/BlogImages/small/{item.Image}"))"
         class="card-img-top" alt="@item.Title">
        <div class="card-body">
        <h5 class="card-title"><a href="/BlogDetail/@item.Slug">@item.Title</a></h5>
            <p class="card-text">@item.ShortDescription</p>
            <small>@item.AddedTime.ToString("dd.MM.yyyy")</small>
        </div>
    </div>
}